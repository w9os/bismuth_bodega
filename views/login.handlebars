<form action="/api/user" method="POST">
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" value="a@a.com">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" value="1">
  </div>
   <div class="form-group">
    <label for="admin_user">Password</label>
    <select name="admin_user" type="select" class="form-control" id="admin_user" >
        <option value="true">Admin</option>
        <option value="false">Member</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>